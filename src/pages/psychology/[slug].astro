---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TagList from "../../components/TagList.astro";
import Toc from "../../components/Toc.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("psychology", ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<"psychology">;
};

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <div class="content-grid">
    <article class="content">
      <header class="content-header">
        <p class="eyebrow">心理</p>
        <h1>{post.data.title}</h1>
        <p class="lead">{post.data.description}</p>
        <p class="meta">
          {post.data.date.toLocaleDateString("zh-TW", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })}
        </p>
        <TagList tags={post.data.tags ?? []} />
      </header>
      <div class="content-body">
        <Content />
      </div>
      <!-- 返回連結 -->
      <nav class="back-nav">
        <a href={`${import.meta.env.BASE_URL}psychology/`} class="back-link">← 返回心理列表</a>
      </nav>
    </article>
    <aside class="content-aside">
      <Toc headings={headings} />
    </aside>
  </div>
</BaseLayout>

<style>
  .back-nav {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border, #e5e7eb);
  }

  .back-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #2563eb;
  }
</style>
