---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TagList from "../../components/TagList.astro";
import { getCollection } from "astro:content";
import { isVisible } from "../../lib/content";

export async function getStaticPaths() {
  const stocks = await getCollection("stocks", isVisible);
  const psychology = await getCollection("psychology", isVisible);
  const tech = await getCollection("tech", isVisible);
  const entries = [...stocks, ...psychology, ...tech];

  const tags = new Set();
  for (const entry of entries) {
    for (const tag of entry.data.tags ?? []) {
      tags.add(tag);
    }
  }

  return [...tags].map((tag) => ({
    params: { tag },
    props: { tag },
  }));
}

const base = import.meta.env.BASE_URL;
const { tag } = Astro.props;

const resolveCategory = (data) => data.category ?? data.sector ?? data.industry ?? "";
const resolveCode = (data) => {
  if (data.stockCode) return data.stockCode;
  if (data.ticker && data.exchange) return `${data.ticker} ${data.exchange}`;
  return data.ticker ?? "";
};

const stocks = await getCollection("stocks", isVisible);
const psychology = await getCollection("psychology", isVisible);
const tech = await getCollection("tech", isVisible);

const filterByTag = (entry) => (entry.data.tags ?? []).includes(tag);

const taggedStocks = stocks
  .filter(filterByTag)
  .sort((a, b) => a.data.title.localeCompare(b.data.title, "zh-TW"));
const taggedPsychology = psychology
  .filter(filterByTag)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const taggedTech = tech
  .filter(filterByTag)
  .sort((a, b) => a.data.order - b.data.order);

const totalCount =
  taggedStocks.length + taggedPsychology.length + taggedTech.length;
---

<BaseLayout title={`標籤：${tag}`} description={`查看 #${tag} 相關內容。`}>
  <section class="list-page">
    <header class="list-hero">
      <p class="eyebrow">標籤</p>
      <h1>#{tag}</h1>
      <p class="lead">共 {totalCount} 篇內容</p>
      <a class="back-link" href={`${base}tags/`}>← 返回標籤列表</a>
    </header>

    {totalCount === 0 ? (
      <p class="empty-state">目前沒有與此標籤相關的內容。</p>
    ) : (
      <>
        {taggedStocks.length > 0 && (
          <section class="section">
            <h2 class="section-title">股票分析</h2>
            <div class="section-grid">
              {taggedStocks.map((stock) => {
                const categoryLabel = resolveCategory(stock.data);
                const code = resolveCode(stock.data);

                return (
                  <article class="card">
                    {categoryLabel && <p class="meta">{categoryLabel}</p>}
                    <h3><a href={`${base}stocks/${stock.slug}/`}>{stock.data.title}</a></h3>
                    {code && <p class="stock-code-mini">{code}</p>}
                    <TagList tags={stock.data.tags ?? []} />
                  </article>
                );
              })}
            </div>
          </section>
        )}

        {taggedPsychology.length > 0 && (
          <section class="section">
            <h2 class="section-title">心理文章</h2>
            <div class="section-grid">
              {taggedPsychology.map((post) => (
                <article class="card">
                  <p class="meta">
                    {post.data.date.toLocaleDateString("zh-TW", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </p>
                  <h3><a href={`${base}psychology/${post.slug}/`}>{post.data.title}</a></h3>
                  <p>{post.data.description}</p>
                  <TagList tags={post.data.tags ?? []} />
                </article>
              ))}
            </div>
          </section>
        )}

        {taggedTech.length > 0 && (
          <section class="section">
            <h2 class="section-title">技術文章</h2>
            <div class="section-grid">
              {taggedTech.map((entry) => (
                <article class="card">
                  <p class="meta">第 {String(entry.data.order).padStart(2, "0")} 篇</p>
                  <h3><a href={`${base}tech/${entry.slug}/`}>{entry.data.title}</a></h3>
                  <TagList tags={entry.data.tags ?? []} />
                </article>
              ))}
            </div>
          </section>
        )}
      </>
    )}
  </section>
</BaseLayout>

<style>
  .back-link {
    color: var(--accent);
    font-weight: 500;
  }

  .empty-state {
    color: var(--muted);
    padding: 2rem 0;
  }

  .stock-code-mini {
    font-family: "Monaco", "Courier New", monospace;
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0.5rem 0;
  }
</style>
