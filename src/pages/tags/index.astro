---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const base = import.meta.env.BASE_URL;

const stocks = await getCollection("stocks");
const psychology = await getCollection("psychology", ({ data }) => !data.draft);
const tech = await getCollection("tech");

function collectTags(entries) {
  const map = new Map();
  for (const entry of entries) {
    for (const tag of entry.data.tags ?? []) {
      map.set(tag, (map.get(tag) ?? 0) + 1);
    }
  }
  return [...map.entries()]
    .sort((a, b) => b[1] - a[1] || a[0].localeCompare(b[0], "zh-TW"))
    .map(([tag, count]) => ({ tag, count }));
}

const sections = [
  { title: "股票分析", tags: collectTags(stocks) },
  { title: "心理文章", tags: collectTags(psychology) },
  { title: "技術文章", tags: collectTags(tech) },
];
---

<BaseLayout title="標籤" description="依照標籤瀏覽全站內容。">
  <section class="list-page">
    <header class="list-hero">
      <p class="eyebrow">標籤</p>
      <h1>標籤瀏覽</h1>
      <p class="lead">快速找到跨領域的關鍵主題。</p>
    </header>

    {sections.map(({ title, tags }) => tags.length > 0 && (
      <section class="section">
        <h2 class="section-title">{title}</h2>
        <div class="taxonomy-grid">
          {tags.map(({ tag, count }) => (
            <div class="taxonomy-item">
              <a href={`${base}tags/${encodeURIComponent(tag)}/`}>#{tag}</a>
              <span class="taxonomy-count">{count} 篇</span>
            </div>
          ))}
        </div>
      </section>
    ))}
  </section>
</BaseLayout>

<style>
  .taxonomy-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 12px;
    margin-top: 24px;
  }

  .taxonomy-item {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 12px 14px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 8px;
  }

  .taxonomy-item a {
    font-weight: 600;
  }

  .taxonomy-count {
    font-size: 0.8rem;
    color: var(--muted);
  }

  .section {
    margin-top: 2rem;
  }

  .section-title {
    font-size: 1.25rem;
    margin-bottom: 12px;
  }
</style>
